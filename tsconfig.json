{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ES2024",
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "use-types",
      "bun-types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "test"
  ]
}